@model albanaPlayaEst.Models.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Albana Garage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye-fill');
                toggleIcon.classList.add('bi-eye-slash-fill');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash-fill');
                toggleIcon.classList.add('bi-eye-fill');
            }
        }
    </script>
</head>

<body style="background-color: #e0ffff;">

<div class="container d-flex justify-content-center align-items-center vh-100 ">
    <div class="card p-0 Regular shadow" style="width: 800px; border-radius: 20px; overflow: hidden; background-color:#146c8e">
        <div class="row no-gutters">
            <!-- Sección de formulario -->
            <div class="col-md-6 p-5" style="background-color: #146c8e; padding: 20px; margin-top: 0px">
                <h2 class="text-center mb-4 text-white">Iniciar Sesión</h2>
                <form asp-controller="Acceso" asp-action="Index" method="post">
                    <div class="mb-3">
                        <label for="Correo" class="form-label fw-bold text-white">Correo Electrónico</label>
                        <input type="email" class="form-control rounded-pill" asp-for="Correo" placeholder="ejemplo@correo.com" required>
                    </div>
                    <div class="mb-3 position-relative">
                        <label for="Clave" class="form-label fw-bold text-white">Contraseña</label>
                        <input type="password" class="form-control rounded-pill" id="Clave" asp-for="Clave" placeholder="••••••••" required>
                        <!-- Icono del ojo para mostrar/ocultar contraseña -->
                        <button type="button" class="btn btn-link text-decoration-none position-absolute"
                                onclick="togglePasswordVisibility()"
                                style="top: 20%; right: 10px; transform: translateY(-20%);">
                            <i id="toggleIcon" class="bi bi-eye-fill"></i>
                        </button>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold " style="background-color: #ff6600;">Iniciar Sesión</button>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="#" class="text-decoration-none text-primary small text-white">¿Olvidaste tu contraseña?</a>
                    </div>
                </form>
            </div>

            <!-- Sección de imagen y logo -->
            <div class=" shadow-lg col-md-6 d-flex flex-column align-items-center justify-content-center mt-6" style="background-color: #ff6b00; border-radius: 90px 0 0 90px; margin-top: -10px;">
                <img src="~/lib/bootstrap/dist/img/logo.png" alt="Logo Albana Garage" class="mb-6 mt-4" style="width: 80%">
                <img src="~/lib/bootstrap/dist/img/auto.png" alt="Auto" class="img-fluid" style="width: 50%">
            </div>
        </div>
    </div>
</div>
</body>
</html>
