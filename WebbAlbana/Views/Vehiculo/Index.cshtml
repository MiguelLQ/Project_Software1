@model IEnumerable<albanaPlayaEst.Dto.VehiculoDto>

@{
    ViewData["Title"] = "Index";
}
<div class="main-content container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrapper shadow-sm rounded bg-white p-3">

                <div class="table-title d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Vehículos Registrados</h2>
                </div>

                <!-- Tabla responsiva con color azul -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="myTablevehic">
                        <thead class=" bg-primary text-white">
                        <tr>
                            <th>Placa</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Color</th>
                            <th>Tipo de Vehículo</th>
                            <th>Propietario</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>@Html.DisplayFor(modelItem => item.PlacaV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MarcV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ModelV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ColorV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DescrTipV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Dni_cliente)</td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.CodV" class="btn btn-warning btn-sm mx-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            <a asp-action="Details" asp-route-id="@item.CodV" class="btn btn-info btn-sm mx-1">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#myTablevehic').DataTable({
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando 0 registros de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sSearch": "Buscar:",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sPrevious": "Anterior",
                        "sNext": "Siguiente",
                        "sLast": "Último"
                    }
                }
            });
        });
    
    </script>
}
<!-- Incluye Font Awesome para los iconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
