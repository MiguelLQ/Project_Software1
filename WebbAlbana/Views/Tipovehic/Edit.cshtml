@model albanaPlayaEst.Models.Tipovehic

@{
    ViewData["Title"] = "Editar Tipo de Vehículo";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 15px;">
        <h2 class="text-center mb-4" style="font-weight: bold; color: #007bff;">@ViewData["Title"]</h2>

        <h4 class="text-center mb-3">Editar Tipo de Vehículo</h4>
        <hr />

        <form asp-action="Edit" class="bg-light p-4 border rounded shadow-sm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="CodTipV" />

            <div class="form-group">
                <label asp-for="DescrTipV" class="control-label font-weight-bold">Descripción del Tipo</label>
                <input asp-for="DescrTipV" class="form-control" />
                <span asp-validation-for="DescrTipV" class="text-danger"></span>
            </div>

            <div class="form-group text-center pt-4">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg w-100 rounded-pill" style="background-color: #007bff; border-color: #007bff;" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary btn-lg w-100 rounded-pill" style="background-color: #6c757d; border-color: #6c757d;">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}