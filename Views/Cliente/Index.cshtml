@model IEnumerable<albanaPlayaEst.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="main-content container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrapper shadow-sm rounded bg-white p-3">

                <div class="table-title d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Clientes Registrados</h2>
                </div>

                <table class="table table-sm table-striped table-hover" id="myTablee">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nom_cliente)</th>
                            <th>@Html.DisplayNameFor(model => model.Apell_cliente)</th>
                            <th>@Html.DisplayNameFor(model => model.Tel_cliente)</th>
                            <th>@Html.DisplayNameFor(model => model.Dni_cliente)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nom_cliente)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apell_cliente)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tel_cliente)</td>
                                <td>@Html.DisplayFor(modelItem => item.Dni_cliente)</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center">
                                        @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Cod_cliente" class="btn btn-sm btn-warning mx-1">
                                                <i class="fas fa-edit fa-xs"></i>
                                            </a>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Cod_cliente" class="btn btn-sm btn-info mx-1">
                                            <i class="fas fa-info-circle fa-xs"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
<script>
    $(document).ready( function () {
        $('#myTablee').DataTable();
    } );
</script>
}
