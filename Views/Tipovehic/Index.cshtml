@model IEnumerable<albanaPlayaEst.Models.Tipovehic>

@{
    ViewData["Title"] = "Tipos de Vehículos";
}
@if (User.IsInRole("Administrador"))
{
    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Tipo de Vehículo
        </a>
    </p>
}


<div class="main-content container ">
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrapper shadow-sm rounded bg-white p-3">

                <div class="table-title d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Tipos de Vehículos</h2>
                </div>

                <!-- Agregamos la clase table-responsive para hacerlo responsive -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DescrTipV)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.DescrTipV)</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center flex-wrap">
                                            <!-- Enlace para editar -->
                                            @if (User.IsInRole("Administrador"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.CodTipV" class="btn btn-sm btn-warning mx-1">
                                                    <i class="fas fa-edit"></i> 
                                                </a>
                                            }
                                            <a asp-action="Details" asp-route-id="@item.CodTipV" class="btn btn-sm btn-info mx-1">
                                                <i class="fas fa-info-circle"></i> 
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Incluye Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
