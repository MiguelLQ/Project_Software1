@model albanaPlayaEst.Dto.VehiculoDto

@{
    ViewData["Title"] = "Agregar Vehículo";
}

<h2 class="text-center mb-4">Crear Nuevo Registro</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="AgregarV" method="post" class="bg-light p-4 border rounded shadow-sm">
                @Html.AntiForgeryToken()
                <!-- Datos del Cliente -->
                <div class="form-group">
                    <label asp-for="Nom_cliente" class="control-label">Nombre del Cliente</label>
                    <input asp-for="Nom_cliente" class="form-control" required />
                    <span asp-validation-for="Nom_cliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apell_cliente" class="control-label">Apellido del Cliente</label>
                    <input asp-for="Apell_cliente" class="form-control" required />
                    <span asp-validation-for="Apell_cliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tel_cliente" class="control-label">Teléfono del Cliente</label>
                    <input asp-for="Tel_cliente" class="form-control" required />
                    <span asp-validation-for="Tel_cliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dni_cliente" class="control-label">DNI del Cliente</label>
                    <input asp-for="Dni_cliente" class="form-control" required />
                    <span asp-validation-for="Dni_cliente" class="text-danger"></span>
                </div>

                <!-- Datos del Vehículo -->
                <div class="form-group">
                    <label asp-for="MarcV" class="control-label">Marca</label>
                    <input asp-for="MarcV" class="form-control" />
                    <span asp-validation-for="MarcV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModelV" class="control-label">Modelo</label>
                    <input asp-for="ModelV" class="form-control" />
                    <span asp-validation-for="ModelV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorV" class="control-label">Color</label>
                    <input asp-for="ColorV" class="form-control" />
                    <span asp-validation-for="ColorV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlacaV" class="control-label">Placa</label>
                    <input asp-for="PlacaV" class="form-control" />
                    <span asp-validation-for="PlacaV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodTipV" class="control-label">Tipo de Vehículo</label>
                    <select asp-for="CodTipV" class="form-control" asp-items="ViewBag.CodTipV"></select>
                    <span asp-validation-for="CodTipV" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100" style="background-color: #007bff; border-color: #007bff;">Agregar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg w-100 mt-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
