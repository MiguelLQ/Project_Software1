@model IEnumerable<albanaPlayaEst.Dto.VehiculoDto>

@{
    ViewData["Title"] = "Index";
}
<div class="main-content container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrapper shadow-sm rounded bg-white p-3">

                <div class="table-title d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Lista de Veh√≠culos</h2>
                </div>

                <!-- Tabla responsiva con color azul -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="myTablevehic">
                        <thead class=" bg-primary text-white">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.MarcV)</th>
                                <th>@Html.DisplayNameFor(model => model.ModelV)</th>
                                <th>@Html.DisplayNameFor(model => model.ColorV)</th>
                                <th>@Html.DisplayNameFor(model => model.PlacaV)</th>
                                <th>@Html.DisplayNameFor(model => model.DescrTipV)</th>
                                <th>@Html.DisplayNameFor(model => model.Dni_cliente)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>@Html.DisplayFor(modelItem => item.MarcV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ModelV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ColorV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PlacaV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DescrTipV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Dni_cliente)</td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            @if (User.IsInRole("Administrador")||User.IsInRole("Empleado"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.CodV" class="btn btn-warning btn-sm mx-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>   
                                            }
                                            <a asp-action="Details" asp-route-id="@item.CodV" class="btn btn-info btn-sm mx-1">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready( function () {
            $('#myTablevehic').DataTable();
        } );
    </script>
}
<!-- Incluye Font Awesome para los iconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
